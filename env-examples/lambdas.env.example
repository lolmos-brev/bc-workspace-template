# =============================================================================
# Lambdas Environment Variables
# =============================================================================
# Copy this file to beanz-connect/lambdas/.env and fill in the values
# DO NOT commit the actual .env file to version control!
# =============================================================================

# AWS Configuration
# -----------------
# For local development with AWS services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_SESSION_TOKEN=your-session-token  # If using temporary credentials

# Database Configuration
# ----------------------
# Database connection string
DATABASE_URL=postgresql://user:password@localhost:5432/beanz_dev
# DATABASE_URL=mongodb://localhost:27017/beanz_dev  # If using MongoDB

# Redis (if applicable)
# REDIS_URL=redis://localhost:6379

# Authentication / JWT
# --------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Auth0 (if applicable)
# AUTH0_DOMAIN=your-tenant.auth0.com
# AUTH0_CLIENT_ID=your-client-id
# AUTH0_CLIENT_SECRET=your-client-secret
# AUTH0_AUDIENCE=https://api.example.com

# External APIs
# -------------
# Add any external API keys here
# STRIPE_SECRET_KEY=sk_test_xxxxx
# SENDGRID_API_KEY=SG.xxxxx
# TWILIO_ACCOUNT_SID=ACxxxxx
# TWILIO_AUTH_TOKEN=your-auth-token

# Breville-specific Configuration
# -------------------------------
# Add Breville API keys and endpoints here
# BREVILLE_API_KEY=your-breville-api-key
# BREVILLE_API_ENDPOINT=https://api.breville.com/v1

# Application Settings
# --------------------
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Feature Flags
# -------------
ENABLE_DEBUG_LOGGING=true
ENABLE_REQUEST_LOGGING=true

# S3 / Storage (if applicable)
# ----------------------------
# S3_BUCKET_NAME=beanz-connect-dev
# CLOUDFRONT_URL=https://d123456.cloudfront.net
