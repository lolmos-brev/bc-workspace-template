# =============================================================================
# Client Environment Variables
# =============================================================================
# Copy this file to beanz-connect/client/.env and fill in the values
# DO NOT commit the actual .env file to version control!
# =============================================================================

# API Configuration
# -----------------
# The base URL for your backend API
VITE_API_URL=http://localhost:3001
# VITE_API_URL=https://api.staging.example.com  # Staging
# VITE_API_URL=https://api.example.com          # Production

# Authentication
# --------------
# OAuth/Auth0 configuration (if applicable)
# VITE_AUTH0_DOMAIN=your-tenant.auth0.com
# VITE_AUTH0_CLIENT_ID=your-client-id
# VITE_AUTH0_AUDIENCE=https://api.example.com

# Feature Flags
# -------------
# Enable/disable features during development
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=false

# Analytics (if applicable)
# -------------------------
# VITE_ANALYTICS_KEY=your-analytics-key
# VITE_SEGMENT_WRITE_KEY=your-segment-key

# Third-party Services
# --------------------
# Add any third-party service keys here
# VITE_STRIPE_PUBLIC_KEY=pk_test_xxxxx
# VITE_GOOGLE_MAPS_KEY=your-google-maps-key

# Build Configuration
# -------------------
# NODE_ENV is usually set automatically
# NODE_ENV=development
